                <h1 id="start" style="font-size: 12vw;margin-left: 10px;margin-bottom: 0;font-family: 'Barlow', sans-serif;
                                     <%if(back[0]){%>color:<%=back[0].tcolor%><%}%><%if(!back[0]){%>color:#000000<%}%>" ><%=one.category%>.</h1>
	
	
	
	<%if(post){%>
	<%post.forEach(function(item){%>
